<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.restaurant.mapper.MenuMapper">
    <!-- 查詢所有菜單 -->
    <select id="getAllMenus" resultType="com.example.restaurant.entity.Menu">
        SELECT * FROM menu;
    </select>

    <!-- 根據ID查詢菜單 -->
    <select id="getMenuById" resultType="com.example.restaurant.entity.Menu">
        SELECT * FROM menu WHERE id = #{id};
    </select>

    <!-- 插入菜單 -->
    <insert id="insertMenu" parameterType="com.example.restaurant.entity.Menu">
        INSERT INTO menu (name, description, image, price, type, ingredients)
        VALUES (#{name}, #{description}, #{image}, #{price}, #{type}, #{ingredients});
    </insert>

    <!-- 更新菜單 -->
    <update id="updateMenu" parameterType="com.example.restaurant.entity.Menu">
        UPDATE menu
        SET name = #{name},
            description = #{description},
            image = #{image},
            price = #{price},
            type = #{type},
            ingredients = #{ingredients}
        WHERE id = #{id};
    </update>

    <!-- 刪除菜單 -->
    <delete id="deleteMenu" parameterType="com.example.restaurant.entity.Menu">
        DELETE FROM menu WHERE id = #{id};
    </delete>
</mapper>
