<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.restaurant.mapper.BillOrderMapper">
    <!-- 查詢所有訂單 -->
    <select id="getAllBillOrders" resultType="com.example.restaurant.entity.BillOrder">
        SELECT * FROM bill_order;
    </select>

    <!-- 根據ID查詢訂單 -->
    <select id="getBillOrdersById" resultType="com.example.restaurant.entity.BillOrder">
        SELECT * FROM bill_order WHERE id = #{id};
    </select>

    <!-- 插入訂單 -->
    <insert id="insertBillOrders" parameterType="com.example.restaurant.entity.BillOrder">
        INSERT INTO bill_order ( order_time, total_price)
        VALUES ( #{orderTime}, #{totalPrice});
    </insert>

    <!-- 更新訂單 -->
    <update id="updateBillOrders" parameterType="com.example.restaurant.entity.BillOrder">
        UPDATE bill_order
        SET order_time = #{orderTime},
            total_price = #{totalPrice}
           
        WHERE id = #{id};
    </update>

    <!-- 刪除菜單 -->
    <delete id="deleteBillOrders" parameterType="com.example.restaurant.entity.BillOrder">
        DELETE FROM bill_order WHERE id = #{id};
    </delete>
</mapper>
